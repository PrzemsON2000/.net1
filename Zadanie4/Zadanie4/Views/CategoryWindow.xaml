<Window x:Class="Zadanie4.Views.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Window" Height="350" Width="525">
    <Grid>
        <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="{Binding Description}" Margin="10,40,10,10"/>
        <ListBox x:Name="SubcategoryListBox" DisplayMemberPath="Name" SelectionChanged="SubcategoryListBox_SelectionChanged" Margin="10,70,10,10"/>
        <Button Content="Open Subcategory" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OpenSubcategory_Click" Margin="10"/>
    </Grid>
</Window>
