<Window x:Class="Zadanie4.Views.SubcategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subcategory Window" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock Text="{Binding Description}" Margin="10,40,10,10"/>
            <TextBlock Text="{Binding ParentCompany}" Margin="10,60,10,10"/>
            <TextBlock Text="{Binding FoundationDate}" Margin="10,80,10,10"/>
            <TextBlock Text="{Binding ProductionCountries}" Margin="10,100,10,10"/>
            <DataGrid ItemsSource="{Binding Models}" AutoGenerateColumns="True" Margin="10,120,10,10"/>
        </StackPanel>
    </Grid>
</Window>
